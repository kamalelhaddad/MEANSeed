//- layout.pug
doctype html
html(lang='en')
  head
    meta(http-equiv='content-type', content='text/html; charset=UTF-8')
    
    meta(charset='utf-8')
    
    block title 
      title Storystrap Template
      
      
    
    meta(name='generator', content='Bootply')
    
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    
    link(href='lib/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
      
    link(href='lib/font-awesome/css/font-awesome.min.css', rel='stylesheet')
    // bower:css
    link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/lib/font-awesome/css/font-awesome.css')
    // endbower
    // bower:js
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="/lib/angular/angular.js"></script>
    <script src="/lib/angular-route/angular-route.js"></script>
    <script src="/lib/toastr/toastr.js"></script>
    <script src="/lib/angular-resource/angular-resource.js"></script>
    // endbower
    // inject:css
    link(rel='stylesheet', href='/css/styles.css')
    // endinject
    // inject:js
    script(src='/js/app.js')
    // endinject
    //if lt IE 9
      script(src='//html5shim.googlecode.com/svn/trunk/html5.js')
    
    link(href='css/styles.css', rel='stylesheet')
    link(rel='shortcut icon', href='/css/amazon.ico', type='image/x-icon')
  
  body(ng-app='mainApp' ng-controller='mainCtrl')
    header.navbar.navbar-bright.navbar-fixed-top(role='banner')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
                  
            span.icon-bar
                  
            span.icon-bar
                  
            span.icon-bar
              
          a.navbar-brand(href='/') Home
        nav.collapse.navbar-collapse(role='navigation')
            ul.nav.navbar-nav
              li(ng-repeat="nav in navs")
                a(href="{{nav.Link}}")
                  span.title {{nav.Text}}
                
            ul.nav.navbar-right.navbar-nav
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  i.glyphicon.glyphicon-search
                        
                ul.dropdown-menu(style='padding:12px;')
                  form.form-inline
                    button.btn.btn-default.pull-right(type='submit')
                      i.glyphicon.glyphicon-search
                    input.form-control.pull-left(type='text', placeholder='Search')
    #masthead
      .container
        .row
          .col-md-7
            h1
              | {{siteName}}
              p.lead
              
          .col-md-5
            .well.well-lg
              .row
                .col-sm-12
      // /cont
      .container
        .row
          .col-md-12
            .top-spacer  
      // /cont
    block content
    hr
    #footer.container
      .row
        .col.col-sm-12
          h1 Follow Us
              
          .btn-group
            a.btn.btn-twitter.btn-lg(href='#')
              i.icon-twitter.icon-large
              |  Twitter
               
            a.btn.btn-facebook.btn-lg(href='#')
              i.icon-facebook.icon-large
              |  Facebook
               
            a.btn.btn-google-plus.btn-lg(href='#')
              i.icon-google-plus.icon-large
              |  Google+
    hr
    hr
    footer
      .container
        .row
          .col-sm-6
            ul.list-inline
              li
                i.icon-facebook.icon-2x
                      
              li
                i.icon-twitter.icon-2x
                      
              li
                i.icon-google-plus.icon-2x
                      
              li
                i.icon-pinterest.icon-2x
              
          .col-sm-6
            p.pull-right
              | Built with 
              i.icon-heart-empty
              |  at 
              a(href='http://www.bootply.com') Bootply